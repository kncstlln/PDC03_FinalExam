<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalExam.View.AddAnimal">
    <ContentPage.Content>
        <StackLayout Margin="20" Spacing="10">
            <Label Text="Animal Code" FontSize="18" FontAttributes="Bold"/>
            <Entry x:Name="txtAnimalCode" Placeholder="Enter Animal Code" FontSize="16"/>

            <Label Text="Characteristics" FontSize="18" FontAttributes="Bold"/>
            <Editor x:Name="txtCharacteristics" Placeholder="Enter Characteristics" FontSize="16"/>

            <Label Text="Species" FontSize="18" FontAttributes="Bold"/>
            <Entry x:Name="txtSpecies" Placeholder="Enter Species" FontSize="16"/>

            <Label Text="Habitat" FontSize="18" FontAttributes="Bold"/>
            <Entry x:Name="txtHabitat" Placeholder="Enter Habitat" FontSize="16"/>

            <Label Text="Threat" FontSize="18" FontAttributes="Bold"/>
            <Entry x:Name="txtThreat" Placeholder="Enter Threat" FontSize="16"/>

            <Button Text="Save" Clicked="btnSaveUpdate_Clicked" BackgroundColor="#2196F3" TextColor="White" FontSize="18" FontAttributes="Bold" CornerRadius="8" HeightRequest="50"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>